{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "rootDir": "./src",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./bind",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
